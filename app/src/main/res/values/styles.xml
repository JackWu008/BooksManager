<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityBookTvTags">
        <item name="android:text">@string/activity_book_tv_tags</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ActivityBookTvRating">
        <item name="android:text">@string/activity_book_tv_rating</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ActivityBookTvName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ActivityBookTextSize">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#58c4e1</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HoloNoTitleBar" parent="@android:style/Theme.NoTitleBar" />


    <style name="TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
